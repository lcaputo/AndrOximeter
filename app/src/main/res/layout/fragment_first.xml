<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Tarjeta #1 ¿Cómo se usa?-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/teal_200"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/montserrat"
                android:text="¿Cómo se usa?"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:justificationMode="inter_word"
                android:padding="20dp"
                android:textSize="14dp"
                android:text="Deberá seleccionar la categoria de signos vitales que desea medir y posteriormente posicionar el dedo indice sobre la camara y flash como se le mostrará mas adelante durante 30 segundos" />


        </RelativeLayout>

        <!-- Tarjeta #2 Funcionamiento-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/teal_200"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/montserrat"
                android:text="Funcionamiento"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:justificationMode="inter_word"
                android:padding="20dp"
                android:textSize="14dp"
                android:text="Deberá otorgar permisos de la camará y posicionar el dedo hasta que se vea completamente rojo, para poder calcular así medianté fotogramas de colores rogisos los signos vitales" />


        </RelativeLayout>

        <!-- Tarjeta #3 Historial-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/teal_200"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/montserrat"
                android:text="Historial"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:justificationMode="inter_word"
                android:padding="20dp"
                android:textSize="14dp"
                android:text="Posee un menú en la parte inferior derecha con esta funcion de historial para que pueda ver el historico de medidas realizadas, recuerde que si desintala la aplicación este se perderá de forma permanente" />


        </RelativeLayout>


    </LinearLayout>


</FrameLayout>